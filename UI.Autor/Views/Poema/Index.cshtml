
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<h2>Poemas</h2>
<input type="button" class="btn-sm btn-success" onclick="cambiarVista()" value="Mostrar formulario" id="btnCambiar" />
<div class="row mt-3">
    <div class="col-lg-12" id="divFormulario" style="display:none">
        <div class="card">
            <div class="card-header">
                <h5>Formulario poemas</h5>
            </div>
            <div class="card-body">
                <input type="hidden" id="Idpoema" name="Idpoema" class="data" />
                <div class="row">
                    <div class="form-group col-lg-4 col-sm-12 col-md-12">
                        <img alt="Foto del poema" id="IMAGEN" class="card-img" src="" />
                        <button class="btn-sm btn-success" id="btnFoto">Buscar</button>
                    </div>
                    <div class="col-lg-8 col-sm-12 col-md-12">
                        <div class="form-group">
                            <label>Titulo</label>
                            <input type="text" name="Titulo" id="Titulo" class="form-control data requerid" />
                        </div>
                        <div class="form-group">
                            <label>Verso</label>
                            <textarea name="Verso" id="Verso" class="form-control data requerid"></textarea>
                            <div style="display:none">
                                <input type="file" class="form-control" id="txtFileFoto" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button onclick="guardar()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
    <div class="col-lg-12" id="myTable" style="display:block">
        <span>Cargando poemas...</span>
    </div>
</div>
<script src="~/Content/jquery.min.js"></script>
<script src="~/Content/limonte-sweetalert2/sweetalert2.min.js"></script>
<script src="~/Content/Ajax/generic.js"></script>
<script src="~/Content/Ajax/poema.js"></script>