
@{
    ViewBag.Title = "Index";
}
<style>
    #carta {
        border-radius: 8px;
        box-shadow: 2px 2px 5px #999 !important;
    }
</style>
<div class="row">
    <div class="col s12 m12 l8">
        <h5>Apoya a Poeta Muerto</h5>
    </div>
    
    <div class="col s12 m12 l8">
        <div class="card" id="carta">
            <div class="card-content">
                <form method="post" >
                    <fieldset>
                        <legend>
                            <h6>Formulario de donación</h6>
                        </legend>
                        <div class="input-field">
                            <input id="txtCorreo" type="email" class="validate">
                            <label for="txtCorreo">Correo</label>
                        </div>
                        <div class="input-field">
                            <input id="txtContrasena" type="password" class="validate">
                            <label for="txtContrasena">Contraseña</label>
                        </div>
                        <div class="input-field">
                            <input id="txtCantidad" type="text" class="validate">
                            <label for="txtCantidad">Cantidad a donar</label>
                        </div>
                        <button class="waves-effect btn" type="submit">Donar</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
        desaparecerCirculoCarga();
    }
</script>